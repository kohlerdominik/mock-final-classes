{
    "name": "nunomaduro/mock-final-classes",
    "description": "Allows mocking of final methods and classes in PHP.",
    "keywords": ["php", "mock", "phpunit", "final", "class", "classes"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "dg/bypass-finals": "^1.1"
    },
    "require-dev": {
        "localheinz/phpstan-rules": "^0.10.0",
        "phpstan/phpstan": "^0.11.8",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpunit/phpunit": "^7.0|^8.0|^9.3",
        "thecodingmachine/phpstan-strict-rules": "^0.11.1"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "NunoMaduro\\MockFinalClasses\\": "src/"
        },
        "files": ["autoload.php"]
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
